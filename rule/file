PKG_VER=5.25
PKG_SRCS=ftp://ftp.astron.com/pub/file/file-$PKG_VER.tar.gz
PKG_DESC="A file type guessing tool"
PKG_DEPS="musl zlib"

build() {
	./configure --prefix=/$PFIX \
	            --mandir=/$PFIX/man \
	            --enable-static \
	            --disable-shared
	[ $? -ne 0 ] && return 1

	$MAKE
}

package() {
	local i

	$MAKE install
	install -D -m 644 README $DESTDIR/$PFIX/doc/file/README
	for i in ChangeLog AUTHORS COPYING
	do
		install -m 644 $i $DESTDIR/$PFIX/doc/file/$i
	done
}
